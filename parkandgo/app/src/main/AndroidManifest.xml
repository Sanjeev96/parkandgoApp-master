<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhillon.parkandgo">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Park and Go"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dhillon.parkandgo.activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dhillon.parkandgo.activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dhillon.parkandgo.activities.UserAreaActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.dhillon.parkandgo.activities.PaymentActivity"
            android:screenOrientation="portrait"/>

    </application>
</manifest>